          <div class="card product-card h-100 border-0 shadow-sm">
            <div class="position-relative">
              <img src="/upload/product/<%= product.image %>" class="card-img-top p-3" style="height:170px;object-fit:contain;" alt="Laptop">
            </div>
            <div class="card-body d-flex flex-column">
              <a style="z-index: 11;" href="/san-pham/<%= helpers.getSlugName(product.product_name) %>-<%= product.id %>.html" class="card-title fw-semibold mb-2 product-link"><%= product.product_name %></a>
              <div class="d-flex justify-content-between align-items-center mb-3">
                <span style="font-size: 17px;" class="text-danger fw-bold"><%= helpers.formatMoney(product.sale_price)%> ₫</span>
                <% if(product.price != product.sale_price) { %>
                <span style="font-size: 17px;" class="text-secondary text-decoration-line-through"><%= helpers.formatMoney(product.price) %> ₫</span>
                <% } %>
              </div>
              <div class="mt-auto d-flex gap-2">
                <button style="z-index: 11;" id_product='<%= product.id %>' class="btn btn-primary flex-grow-1 addcartindisplay" onclick="addcartindisplay('<%= product.id %>' )"><i class="fa fa-cart-plus me-1"></i>Thêm vào giỏ</button>
              </div>
            </div>
          </div>
          <!-- ₫ -->