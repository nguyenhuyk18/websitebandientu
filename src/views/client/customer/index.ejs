<%- include('../layout/header.ejs') %>
<section class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10">
      <div class="row g-4">
        <!-- Sidebar -->
        <div class="col-12 col-md-4">
          <div class="customer-sidebar rounded-4 shadow-sm p-0 bg-white">
            <div class="sidebar-title px-4 py-3 border-bottom fw-bold text-uppercase text-primary">
              <i class="fa fa-user-circle me-2"></i> Tài khoản của bạn
            </div>
            <ul class="list-unstyled mb-0">
              <li>
                <a href="thong-tin-khach-hang.html" class="sidebar-link active">
                  <i class="fa fa-user me-2"></i> Thông tin tài khoản
                </a>
              </li>
              <li>
                <a href="dia-chi-giao-hang-mac-dinh.html" class="sidebar-link">
                  <i class="fa fa-map-marker-alt me-2"></i> Địa chỉ giao hàng
                </a>
              </li>
              <li>
                <a href="don-hang-cua-toi.html" class="sidebar-link">
                  <i class="fa fa-box-open me-2"></i> Đơn hàng của tôi
                </a>
              </li>
            </ul>
          </div>
        </div>
        <!-- Main Content -->
        <div class="col-12 col-md-8">
          <div class="customer-info-form rounded-4 shadow-sm bg-white p-4 p-md-5">
            <div class="form-title mb-4 pb-2 border-bottom border-3 border-primary fw-bold text-uppercase fs-5">
              Thông tin tài khoản
            </div>
            <form class="customer-changepass-form" method="post" action="/cap-nhat-thong-tin-khach-hang">
              <input type="hidden" name="id" value="<%= customer.id %>">
              <div class="mb-3">
                <label class="form-label fw-semibold" for="name">Họ và tên</label>
                <input type="text" id="name" name="name" class="form-control rounded-pill" value="<%= customer.name %>">
              </div>
              <div class="mb-3">
                <label class="form-label fw-semibold" for="phone">Số điện thoại</label>
                <input type="text" id="phone" name="phone" class="form-control rounded-pill" value="<%= customer.phone %>">
              </div>
              <div class="mb-3">
                <label class="form-label fw-semibold" for="current_password">Mật khẩu hiện tại</label>
                <input type="password" id="current_password" name="current_password" class="form-control rounded-pill" placeholder="Nhập mật khẩu hiện tại">
              </div>
              <div class="mb-3">
                <label class="form-label fw-semibold" for="new_password">Mật khẩu mới</label>
                <input type="password" id="new_password" name="new_password" class="form-control rounded-pill" placeholder="Nhập mật khẩu mới">
              </div>
              <div class="mb-4">
                <label class="form-label fw-semibold" for="confirm_password">Nhập lại mật khẩu mới</label>
                <input type="password" id="confirm_password" name="confirm_password" class="form-control rounded-pill" placeholder="Nhập lại mật khẩu mới">
              </div>
              <div class="text-end">
                <button type="submit" class="btn btn-primary rounded-pill px-4 py-2 fw-bold shadow-sm">
                  <i class="fa fa-save me-2"></i>Lưu thay đổi
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('../layout/footer.ejs') %>