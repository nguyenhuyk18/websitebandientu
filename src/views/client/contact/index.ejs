<%- include('../layout/header.ejs') %>
<section class="container my-5">
  <div class="row g-4 align-items-stretch">
    <!-- Google Map -->
    <div class="col-12 col-lg-6">
      <div class="h-100 rounded-4 overflow-hidden shadow border-0" style="min-height:370px;">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.0213176954817!2d106.61445710984322!3d10.80967898929666!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752bef54e763fb%3A0xf52f4f3e082c5946!2zMTUgxJDGsOG7nW5nIFQ2LCBUw6J5IFRo4bqhbmgsIFTDom4gUGjDuiwgSOG7kyBDaMOtIE1pbmgsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1750095506077!5m2!1svi!2s" width="100%" height="100%" style="border:0;min-height:370px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
    <!-- Contact Form -->
    <div class="col-12 col-lg-6">
      <div class="h-100 p-4 rounded-4 shadow border bg-white">
        <h3 class="fw-bold mb-4 text-primary">
          <i class="fa fa-envelope-open-text me-2"></i>Thông tin liên hệ
        </h3>
        <form class="contact-form" method="post" action="">
          <div class="mb-3">
            <label class="form-label fw-semibold text-secondary">Họ và tên</label>
            <input type="text" name="fullname" class="form-control form-control-lg rounded-pill shadow-sm" placeholder="Nhập họ và tên" required>
          </div>
          <div class="row g-3 mb-3">
            <div class="col">
              <label class="form-label fw-semibold text-secondary">Email</label>
              <input type="email" name="email" class="form-control form-control-lg rounded-pill shadow-sm" placeholder="Nhập email" required>
            </div>
            <div class="col">
              <label class="form-label fw-semibold text-secondary">Số điện thoại</label>
              <input type="text" name="phone" class="form-control form-control-lg rounded-pill shadow-sm" placeholder="Nhập số điện thoại" required>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label fw-semibold text-secondary">Nội dung</label>
            <textarea class="form-control rounded-4 shadow-sm" rows="6" name="message" placeholder="Nhập nội dung liên hệ..." required></textarea>
          </div>
          <div class="messagecontact alert alert-primary" role="alert">
          </div>
          <div class="text-end">
            <button type="submit" class="btn btn-gradient-primary px-5 py-2 fw-bold rounded-pill shadow-sm">
              <i class="fa fa-paper-plane me-2"></i>Gửi
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<%- include('../layout/footer.ejs') %>