<!-- Page Wrapper -->
<%- include('../layout/header.ejs') %>

<!-- Sidebar -->
<%- include('../layout/sidebar.ejs') %>
<!-- End of Sidebar -->

<div id="content-wrapper" class="d-flex flex-column">

  <!-- Main Content -->
  <div id="content">

    <!-- Topbar -->
    <%- include('../layout/navbar.ejs') %>
    <!-- End of Topbar -->

    <!-- Begin Page Content -->
    <div class="container-fluid">

      <!-- Page Heading -->
      <h1 class="h3 mb-2 text-gray-800">Chọn Khách Hàng Để Thêm Đơn</h1>

      <!-- DataTales Example -->
      <div class="card shadow mb-4">
        <!-- <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div> -->
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>STT</th>
                  <th>Tên</th>
                  <th>SĐT</th>
                  <th>Email</th>
                  <th></th>
                  <!-- <th></th>
                  <th></th> -->
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>STT</th>
                  <th>Tên</th>
                  <th>SĐT</th>
                  <th>Email</th>
                  <th></th>
                  <!-- <th></th>
                  <th></th> -->
                </tr>
              </tfoot>
              <tbody>
                <% let stt = 0; for(const customer of listCustomer) { stt++; if(customer.status) { %>
                <tr>
                  <td><%= stt %></td>
                  <td><%= customer.username %></td>
                  <td><%= customer.phone %></td>
                  <td><%= customer.email %></td>
                  <td> <% if(customer.status) { %> <a href="/admin/order/create.html/<%= customer.id %>" class="btn btn-sm btn-primary">Thêm Đơn Hàng</a> <% } %></td>
                  <!-- <td><a href="/admin/customer/edit/<%= customer.id %>" class="btn btn-warning btn-sm">Sửa</a></td>
                  <td><a href="javascript:void(0)" data_href="/admin/customer/delete/<%= customer.id %>" data-toggle="modal" data-target="#areyousure" class="btn btn-danger btn-sm delete">Xóa</a></td> -->
                </tr>
                <% } %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>
    <!-- /.container-fluid -->

  </div>
  <!-- End of Main Content -->

  <!-- Footer -->
  <footer class="sticky-footer bg-white">
    <div class="container my-auto">
      <div class="copyright text-center my-auto">
        <span>Copyright &copy; Nguyễn Đức Huy ADMIN 2020</span>
      </div>
    </div>
  </footer>
  <!-- End of Footer -->

</div>


