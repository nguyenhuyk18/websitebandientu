  <!-- Main Content -->
  <div id="content">

    <!-- Topbar -->
    <%- include('../layout/navbar.ejs') %>
    <!-- End of Topbar -->

    <!-- Begin Page Content -->
    <div class="container-fluid">

      <!-- Page Heading -->
      <h1 class="h3 mb-2 text-gray-800">Danh Sách Đơn Hàng</h1>
      <!-- <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
          For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p> -->

      <!-- DataTales Example -->
      <div class="card shadow mb-4">
        <!-- <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div> -->
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>STT</th>
                  <th>Tên Tỉnh Thành</th>
                  <th>Phí Vận Chuyển</th>
                  <th></th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>STT</th>
                  <th>Tên Tỉnh Thành</th>
                  <th>Phí Vận Chuyển</th>
                  <th></th>
                </tr>
              </tfoot>
              <tbody>
                <% let stt = 0; for(const transport of listTransport) { stt++ %>
                <tr>
                  <td><%= stt %></td>
                  <td><%= transport.name_province %></td>
                  <td><%= transport.price %></td>
                  <td><a href="/admin/transport/edit/<%= transport.id %>" class="btn btn-warning btn-sm ">Sửa</a></td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>
    <!-- /.container-fluid -->

  </div>
