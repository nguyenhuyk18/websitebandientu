<%- include('../layout/header.ejs') %>

<%- include('../layout/sidebar.ejs') %>

<div id="content-wrapper" class="d-flex flex-column">
  <div id="content">
    <%- include('../layout/navbar.ejs') %>

    <form action="/admin/mouse/update" method="POST" class="edit-mouse container" enctype="multipart/form-data">
      <h3 class="text-center">Cập Nhật Thông Tin Sản Phẩm Chuột</h3>
      <div class="row">
        <input type="hidden" name="id" value="<%= mouse.id %>">
        <div class="col-12 mb-3">
          <!-- product name -->
          <input type="text" class="form-control" placeholder="Tên Sản Phẩm" name="product_name" value="<%= mouse.product_name %>">
        </div>
        <div class="col-md-6 mb-3">
          <!-- price -->
          <input type="text" class="form-control" placeholder="Nhập Đơn Gía" name="price" value="<%= mouse.price %>">
        </div>
        <div class="col-md-6 mb-3">
          <!-- stock_quantity -->
          <input type="text" class="form-control" placeholder="Nhập Số Lượng" name="stock_quantity" value="<%= mouse.stock_quantity %>">
        </div>
        <div class="col-12 mb-3">
          <div class="custom-file">
            <input type="hidden" name="old_image" value="<%= mouse.image %>">
            <input type="file" name="image" class="custom-file-input" id="customFile">
            <label class="custom-file-label" for="customFile" data-browse="Chọn tệp">Chọn ảnh sản phẩm...</label>
          </div>
        </div>
        <!-- discount -->
        <div class="col-md-4 mb-3">
          <input type="text" name="discount" placeholder="Nhập % giảm giá" class="form-control" value="<%= mouse.discount %>">
        </div>
        <!-- discount from date -->
        <div class="col-md-4 mb-3">
          <input type="date" name="discount_from_date" placeholder="Nhập ngày giảm giá bắt đầu" class="form-control" value="<%= mouse.discount_from_date %>">
        </div>
        <!-- discount to date -->
        <div class="col-md-4 mb-3">
          <input type="date" name="discount_to_date" placeholder="Nhập ngày giảm giá kết thúc" class="form-control" value="<%= mouse.discount_to_date %>">
        </div>
        <!-- id_brand -->
        <div class="col-md-6 mb-3">
          <select name="id_brand" class="form-control choosebrand">
            <option value="">-- Vui Lòng Chọn Thương Hiệu --</option>
            <% for ( const brand of listBrand) { %>
            <option value="<%= brand.id %>" <%= brand.id === mouse.id_brand ? 'selected' : '' %>><%= brand.name_brand %></option>
            <% } %>
          </select>
        </div>
        <!-- id_category -->
        <div class="col-md-6 mb-3">
          <select name="id_category" class="form-control choosecategory">
            <option value="">-- Vui Lòng Chọn Danh Mục --</option>
            <% for ( const category of listCategory) { %>
            <option value="<%= category.id_category %>" <%= category.id_category == mouse.id_category ? 'selected' : '' %>><%= category.name_category %></option>
            <% } %>
          </select>
        </div>

        <div class="col-md-4 mb-3">
          <input type="text" name="connection_type" class="form-control" placeholder="Nhập Kiểu Kết Nối" value="<%= mouse.connection_type %>">
        </div>
        <div class="col-md-4 mb-3">
          <input type="text" name="led" class="form-control" placeholder="Nhập Loại Led" value="<%= mouse.led %>">
        </div>
        <div class="col-md-4 mb-3">
          <input type="text" name="warranty" class="form-control" placeholder="Nhập Thời Gian Bảo Hành (Tháng)" value="<%= mouse.warranty %>">
        </div>
        <div class="col-md-4 mb-3">
          <input type="text" name="color" class="form-control" placeholder="Nhập Màu Sắc" value="<%= mouse.color %>">
        </div>
        <div class="col-md-4 mb-3">
          <input type="text" name="weight" class="form-control" placeholder="Nhập Trọng Lượng (Kg)" value="<%= mouse.weight %>">
        </div>
        <div class="col-md-4 mb-3">
          <input type="text" name="DPI" class="form-control" placeholder="Nhập DPI (Độ Phân Giải)" value="<%= mouse.DPI %>">
        </div>

        <div class="col-12 mb-3">
          <!-- description -->
          <textarea name="description" id="description" rows="5" class="form-control" placeholder="Nhập Mô Tả Sản Phẩm"><%= mouse.description %></textarea>
        </div>
      </div>

      <div>
        <button type="submit" class="btn btn-warning">Lưu</button>
        <button type="reset" class="btn btn-primary">Nhập Lại</button>
        <a href="/admin/mouse.html" class="btn btn-danger">Quay Lại Danh Sách Chuột</a>
      </div>
    </form>
  </div>
</div>


<%- include('../layout/footer.ejs') %>