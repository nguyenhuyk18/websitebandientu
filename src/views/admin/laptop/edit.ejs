<%- include('../layout/header.ejs') %>

<%- include('../layout/sidebar.ejs') %>

<div id="content-wrapper" class="d-flex flex-column">
  <div id="content">
    <%- include('../layout/navbar.ejs') %>


    <form action="/admin/laptop/update" method="POST" class="edit-laptop container" enctype="multipart/form-data">
      <h3 class="text-center">Sửa Thông Tin Sản Phẩm Laptop</h3>

      <input type="hidden" name="id" value="<%= product.id %>">
      <div class="row">
        <div class="col-12 mb-3">
          <input type="text" class="form-control" placeholder="Tên Sản Phẩm" name="product_name" value="<%= product.product_name %>">
        </div>
        <div class="col-md-6 mb-3">
          <input type="text" class="form-control" placeholder="Nhập Đơn Gía" name="price" value="<%= product.price %>">
        </div>
        <div class="col-md-6 mb-3">
          <input type="text" class="form-control" placeholder="Nhập Số Lượng" name="stock_quantity" value="<%= product.stock_quantity %>">
        </div>
        <div class="col-12 mb-3">
          <div class="custom-file">
            <input type="hidden" name="old_image" value="<%= product.image %>">
            <input type="file" name="image" class="custom-file-input" id="customFile">
            <label class="custom-file-label" for="customFile" data-browse="Chọn tệp">Chọn ảnh sản phẩm...</label>
          </div>
        </div>
        <div class="col-md-4 mb-3">
          <input type="text" name="discount" placeholder="Nhập % giảm giá" class="form-control" value="<%= product.discount %>">
        </div>
        <div class="col-md-4 mb-3">
          <input type="date" name="discount_from_date" placeholder="Nhập ngày giảm giá bắt đầu" class="form-control" value="<%= product.discount_from_date %>">
        </div>
        <div class="col-md-4 mb-3">
          <input type="date" name="discount_to_date" placeholder="Nhập ngày giảm giá kết thúc" class="form-control" value="<%= product.discount_to_date %>">
        </div>
        <div class="col-md-6 mb-3">
          <select name="id_brand" class="form-control choosebrand">
            <option value="">-- Vui Lòng Chọn Thương Hiệu --</option>
            <% for ( const brand of listBrand) {  %>
            <option value="<%= brand.id %>" <%= product.id_brand === brand.id ? 'selected' : '' %>><%= brand.name_brand %></option>
            <% } %>
          </select>
        </div>
        <div class="col-md-6 mb-3">
          <select name="id_category" class="form-control choosecategory">
            <option value="">-- Vui Lòng Chọn Danh Mục --</option>
            <% for ( const category of listCategory) { %>
            <option value="<%= category.id %>" <%= product.id_category === category.id ? 'selected' : '' %>><%= category.name_category %></option>
            <% } %>
          </select>
        </div>
        <div class="col-md-4 mb-3">
          <input type="text" name="cpu" class="form-control" placeholder="Nhập Thông Tin CPU" value="<%= product.cpu %>">
        </div>
        <div class="col-md-4 mb-3">
          <input type="text" name="ram" class="form-control" placeholder="Nhập Thông Tin RAM" value="<%= product.ram %>">
        </div>
        <div class="col-md-4 mb-3">
          <input type="text" name="graphics_card" class="form-control" placeholder="Nhập Thông Tin Card Đồ Họa" value="<%= product.graphics_card %>">
        </div>
        <div class="col-md-4 mb-3">
          <input type="text" name="screen_size" class="form-control" placeholder="Nhập Kích Thước Màn Hình" value="<%= product.screen_size %>">
        </div>
        <div class="col-md-4 mb-3">
          <input type="text" name="screen_solution" class="form-control" placeholder="Nhập Độ Phân Giải Màn Hình" value="<%= product.screen_solution %>">
        </div>
        <div class="col-md-4 mb-3">
          <input type="text" name="operating_system" class="form-control" placeholder="Nhập Hệ Điều Hành" value="<%= product.operating_system %>">
        </div>
        <div class="col-md-6 mb-3">
          <input type="text" name="weight" class="form-control" placeholder="Nhập Trọng Lượng Sản Phẩm" value="<%= product.weight %>">
        </div>
        <div class="col-md-6 mb-3">
          <input type="text" name="release_year" class="form-control" placeholder="Nhập Năm Phát Hành" value="<%= product.release_year %>">
        </div>
        <div class="col-12 mb-3">
          <textarea name="description" id="description" rows="5" class="form-control" placeholder="Nhập Mô Tả Sản Phẩm"><%= product.description %></textarea>
        </div>
      </div>

      <div>
        <button type="submit" class="btn btn-warning">Lưu</button>
        <button type="reset" class="btn btn-primary">Nhập Lại</button>

        <a href="/admin/laptop.html" class="btn btn-danger  ">Quay Lại Danh Sách Laptop</a>
      </div>
    </form>
  </div>
</div>


<%- include('../layout/footer.ejs') %>