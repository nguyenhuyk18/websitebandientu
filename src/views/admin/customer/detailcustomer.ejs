<!-- Page Wrapper -->
<%- include('../layout/header.ejs') %>

<!-- Sidebar -->
<%- include('../layout/sidebar.ejs') %>
<!-- End of Sidebar -->

<div id="content-wrapper" class="d-flex flex-column">

  <!-- Main Content -->
  <div id="content">

    <!-- Topbar -->
    <%- include('../layout/navbar.ejs') %>
    <!-- End of Topbar -->

    <!-- Begin Page Content -->
    <div class="container-fluid">

      <!-- Page Heading -->
      <h1 class="h3 mb-2 text-gray-800">Chi Tiết Thông Tin Khách Hàng</h1>
      <!-- <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p> -->
      <div class="dieuhuong mb-3">
        <a href="/admin/customer.html" class="btn btn-primary">Quay Lại Danh Sách Khách Hàng</a>
        <a href="/admin/customer/edit/<%= customer.id %>" class="btn btn-success">Sửa Thông Tin Khách Hàng</a>
        <a href="/admin/customer/delete/<%= customer.id %>" class="btn btn-danger">Xóa Khách Hàng</a>
      </div>
      <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Thông Tin Khách Hàng</h5>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <strong>Tên Khách Hàng:</strong>
            <span class="float-right"><%= customer.name %></span>
          </li>
          <li class="list-group-item">
            <strong>Email:</strong>
            <span class="float-right"><%= customer.email %></span>
          </li>
          <li class="list-group-item">
            <strong>Số Điện Thoại:</strong>
            <span class="float-right"><%= customer.phone %></span>
          </li>
          <li class="list-group-item">
            <strong>Tên Đăng Nhập:</strong>
            <span class="float-right"><%= customer.username %></span>
          </li>
          <li class="list-group-item">
            <strong>Địa Chỉ:</strong>
            <span class="float-right"><%= customer.housenumber_street %>, <%= ward %></span>
          </li>
          <li class="list-group-item">
            <strong>Trạng Thái:</strong>
            <span class="float-right">
              <span class="badge badge-<%= customer.status === 1 ? 'success' : 'secondary' %>">
                <%= customer.status === 1 ? 'Đang hoạt động' : 'Đã khóa' %>
              </span>
            </span>
          </li>
          <li class="list-group-item">
            <strong>Ngày Tạo:</strong>
            <span class="float-right"><%= customer.created_date ? customer.created_date : 'Chưa cập nhật' %></span>
          </li>
        </ul>
      </div>

    </div>
    <!-- /.container-fluid -->

  </div>
  <!-- End of Main Content -->

  <!-- Footer -->
  <footer class="sticky-footer bg-white">
    <div class="container my-auto">
      <div class="copyright text-center my-auto">
        <span>Copyright &copy; Nguyễn Đức Huy ADMIN 2020</span>
      </div>
    </div>
  </footer>
  <!-- End of Footer -->

</div>


<%- include('../layout/footer.ejs') %>