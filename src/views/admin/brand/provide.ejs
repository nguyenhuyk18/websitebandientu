<!-- Page Wrapper -->
<%- include('../layout/header.ejs') %>

<!-- Sidebar -->
<%- include('../layout/sidebar.ejs') %>
<!-- End of Sidebar -->

<div id="content-wrapper" class="d-flex flex-column">

  <!-- Main Content -->
  <div id="content">

    <!-- Topbar -->
    <%- include('../layout/navbar.ejs') %>
    <!-- End of Topbar -->

    <!-- Begin Page Content -->
    <form action="/admin/brand-category/create" method="POST" class="container">
      <input type="hidden" name="id_brand" value="<%= brand.id  %>">
      <div class="row">
        <% for( const category of  listCategory) { %>
        <div class="col-md-6 mb-3">
          <label> <input type="checkbox" <%= listIDCategory.includes(category.id) ? 'checked' : '' %> name="id_category" value="<%= category.id %>"> <%= category.name_category %> </label>
        </div>
        <% } %>
      </div>
      <button type="submit" class="btn btn-warning">Lưu</button>
      <button class="btn btn-primary">Nhập lại</button>
    </form>
    <!-- /.container-fluid -->

  </div>
  <!-- End of Main Content -->

  <!-- Footer -->
  <footer class="sticky-footer bg-white">
    <div class="container my-auto">
      <div class="copyright text-center my-auto">
        <span>Copyright &copy; Nguyễn Đức Huy ADMIN 2020</span>
      </div>
    </div>
  </footer>
  <!-- End of Footer -->

</div>

<%- include('../layout/footer.ejs') %>